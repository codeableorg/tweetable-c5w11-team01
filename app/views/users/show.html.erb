      </li>
    </ul>

    <div class="contentido" id="contenido">
      <div id="tweets" >
        <%= render @user.tweets %>
      </div>

      <div id="likes" class="flex flex-column item-center">
        <% @user.likes.each do |like| %>
          <%= render like.tweet %>
        <% end%>
      </div>
    </div>


  </div>
</div>
